.Serch {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
}
.Serch > .head {
  position: fixed;
  background-color: #D33B2E;
  display: flex;
  width: 100%;
  line-height: 40px;
  padding: 5px 10px;
}
.Serch > .head > i {
  flex: 1;
  color: #fff;
}
.Serch > .head > input {
  flex: 8;
  background-color: #D33B2E;
  caret-color: #fff;
  border-bottom: 1px solid rgba(255, 255, 255, 0.685);
  color: #fff;
}
.Serch > .head > input::-webkit-input-placeholder {
  color: #E98678;
}
.Serch > .main {
  padding: 50px 0;
  margin-bottom: 60px;
}
